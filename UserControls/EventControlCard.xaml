<UserControl x:Class="Calendario.UserControls.EventControlCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendario.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel Orientation="Vertical" Width="100" Height="100" Background="LightBlue">
        <TextBlock Text="{Binding Title}" FontWeight="Bold" Height="auto" Width="115" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding StartTime}" Height="auto" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding EndTime}" Height="auto" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding Location}" Height="auto" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding Description}" Height="auto" TextWrapping="Wrap"/>
    </WrapPanel>
    
</UserControl>

