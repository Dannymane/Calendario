<Window x:Class="Calendario.Dialogs.EventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Event Details" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18" />
            <TextBlock Text="{Binding Day, StringFormat=dd MMMM yyyy}" />
            <TextBlock Text="{Binding StartTime, StringFormat=hh:mm tt}" />
            <TextBlock Text="{Binding EndTime, StringFormat=hh:mm tt}" />
            <TextBlock Text="{Binding Location}" />
        </StackPanel>
        <Rectangle Grid.Row="1" Fill="LightGray"
                   Height="{Binding EndTime, StringFormat=\{0:hh\}}"
                   Margin="0,5,0,5" VerticalAlignment="Bottom" />
    </Grid>
</Window>
